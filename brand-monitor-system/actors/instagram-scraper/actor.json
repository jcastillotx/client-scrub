{
    "actorSpecification": 1,
    "name": "brand-monitor-instagram-scraper",
    "title": "Brand Monitor Instagram Scraper",
    "description": "Scrapes Instagram for brand mentions via hashtags and explore. Optimized for brand monitoring.",
    "version": "1.0.0",
    "buildTag": "latest",
    "input": {
        "type": "object",
        "schemaVersion": 1,
        "properties": {
            "hashtags": {
                "title": "Hashtags",
                "type": "array",
                "description": "Hashtags to search (without #)",
                "editor": "stringList",
                "items": {
                    "type": "string"
                }
            },
            "maxPosts": {
                "title": "Maximum Posts",
                "type": "integer",
                "description": "Maximum number of posts to collect per hashtag",
                "default": 100,
                "minimum": 1,
                "maximum": 500
            },
            "includeComments": {
                "title": "Include Comments",
                "type": "boolean",
                "description": "Scrape comments on posts (increases run time)",
                "default": false
            },
            "maxCommentsPerPost": {
                "title": "Max Comments per Post",
                "type": "integer",
                "description": "Maximum comments to collect per post",
                "default": 20
            }
        },
        "required": ["hashtags"]
    },
    "storages": {
        "dataset": {
            "actorSpecification": 1,
            "fields": {
                "url": { "type": "string" },
                "caption": { "type": "string" },
                "author": { "type": "string" },
                "timestamp": { "type": "string" },
                "likesCount": { "type": "integer" },
                "commentsCount": { "type": "integer" },
                "hashtag": { "type": "string" },
                "mediaType": { "type": "string" },
                "source_type": { "type": "string" }
            }
        }
    }
}
